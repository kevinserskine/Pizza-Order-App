<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Order Pizza"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="70dp"
        android:fontFamily="sans-serif-thin"
        android:textColor="@color/black">

    </TextView>



    <RadioGroup
        android:id="@+id/pOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="100dp">

        <RadioButton
            android:id="@+id/pSix"
            android:layout_width="375dp"
            android:layout_height="20dp"
            android:text="Round Pizza 6 Slices - Serves 3 People ($5.50)"
            android:textSize="15dp"
            tools:layout_editor_absoluteX="9dp"
            tools:layout_editor_absoluteY="83dp"
            android:layout_marginTop="10dp"/>

        <RadioButton
            android:id="@+id/pEight"
            android:layout_width="375dp"
            android:layout_height="20dp"
            android:text="Round Pizza 8 Slices - Serves 4 People ($7.99)"
            android:textSize="15dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="99dp"
            android:layout_marginTop="10dp"/>


        <RadioButton
            android:id="@+id/pTen"
            android:layout_width="375dp"
            android:layout_height="20dp"
            android:text="Round Pizza 10 Slices - Serves 5 People ($9.50)"
            android:textSize="15dp"
            tools:layout_editor_absoluteX="3dp"
            tools:layout_editor_absoluteY="72dp"
            android:layout_marginTop="10dp"/>

        <RadioButton
            android:id="@+id/pTwelve"
            android:layout_width="375dp"
            android:layout_height="20dp"
            android:text="Round Pizza 12 Slices - Serves 6 People ($11.38)"
            android:textSize="15dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="99dp"
            android:layout_marginTop="10dp"/>

    </RadioGroup>

    <Spinner
        android:id="@+id/pToppings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="250dp">

    </Spinner>

    <Button
        android:id="@+id/Total"
        android:layout_width="400dp"
        android:textSize="17dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="540dp"
        android:text="Submit">

    </Button>


    <CheckBox
        android:id="@+id/eCheese"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="280dp"
        android:text="Extra Cheese($5)"
        android:textSize="15dp" />

    <CheckBox
        android:id="@+id/delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="10dp"
        android:text="Delivery($5)" />

    <EditText
        android:id="@+id/instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="140dp"
        android:inputType="textPersonName"
        android:hint="Special Instructions"/>



    <EditText
        android:id="@+id/name"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textSize="15dp"
        android:layout_marginTop="370dp"
        android:inputType="textPersonName"
        android:hint="Name"/>



    <EditText
        android:id="@+id/address"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="410dp"
        android:layout_marginLeft="10dp"
        android:inputType="textPersonName"
        android:hint="Address"/>



    <EditText
        android:id="@+id/phone"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="10dp"
        android:hint="Phone"
        android:inputType="phone"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="15dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_marginTop="490dp"
        android:layout_marginLeft="10dp"
        android:hint="Email"
        android:inputType="textEmailAddress" />



</RelativeLayout>